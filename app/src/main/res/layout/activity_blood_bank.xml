<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".Activities.Controller.Blood_bank">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:background="@color/Blood"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:text="Blood Banak"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/hemi"
        />

</androidx.appcompat.widget.Toolbar>



    <!--<Spinner

        android:id="@+id/blood_group_spinner_bloodBank"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dip"
        android:entries="@color/Blood"
        android:spinnerMode="dialog"
        android:background="@android:color/holo_purple" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/lightpink"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Division:"
            android:textColor="@color/Red"
            android:layout_marginLeft="20dp"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/blood_bank_divison"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            android:entries="@array/division_list" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/lightpink"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group:"
            android:textColor="@color/Red"

            android:textSize="40dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/blood_bank_bloodGroup"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            android:entries="@array/Blood_Group" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_blood_bank"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/Red"
        android:text="Search"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/baloo"
        android:background="@color/Gray"
        android:layout_height="80dp"/>

</LinearLayout>